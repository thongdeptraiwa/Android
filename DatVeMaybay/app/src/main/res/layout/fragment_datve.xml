<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnTu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/custom_btn_xam"
        android:drawableLeft="@drawable/iconmaybay"
        android:gravity="left"
        android:text="Từ \n....."
        android:textColor="#000000"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btn_xam"
        android:drawableLeft="@drawable/index"
        android:gravity="left"
        android:text="Đến \n....."
        android:textColor="#000000"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTu" />
    <Button
        android:id="@+id/btnKhoiHanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btn_xam"
        android:drawableLeft="@drawable/lich"
        android:gravity="left"
        android:text="Khởi hành \n....."
        android:textColor="#000000"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDen" />
    <Button
        android:id="@+id/btnKetThuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btn_xam"
        android:drawableLeft="@drawable/lich"
        android:gravity="left"
        android:text="Kết thúc \n....."
        android:textColor="#000000"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKhoiHanh" />
    <Button
        android:id="@+id/btnGhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btn_xam"
        android:drawableLeft="@drawable/ghe"
        android:gravity="left"
        android:text="Ghế \n....."
        android:textColor="#000000"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKetThuc" />
    <Button
        android:id="@+id/btnChieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btn_xam"
        android:drawableLeft="@drawable/haichieu"
        android:gravity="left"
        android:text="Chiều \n....."
        android:textColor="#000000"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGhe" />

    <Button
        android:id="@+id/btnThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_btn_xanhnuoc"
        android:text="Thanh Toán"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChieu" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btn_vien_xanhnuoc"
        android:text="Hủy"
        android:textSize="20dp"
        android:textColor="#039BE5"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThanhToan" />
</androidx.constraintlayout.widget.ConstraintLayout>