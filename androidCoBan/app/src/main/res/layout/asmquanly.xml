<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ASM.ASMQuanly">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Quản lý Nhân Sự"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWARE COMPANY"
        android:textColor="#FF5722"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <Button
        android:id="@+id/btnPhongBan"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        android:text="Phòng ban"
        android:textColor="#ff00"
        android:textSize="25sp"
        android:drawableTop="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:background="@drawable/custom_item_button"
        app:backgroundTint="@null"
        />

    <Button
        android:id="@+id/btnNhanVien"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="10dp"
        android:text="Nhân viên"
        android:textColor="#3F51B5"
        android:textSize="25sp"
        android:drawableTop="@drawable/people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:background="@drawable/custom_item_button"
        app:backgroundTint="@null"
        />

    <Button
        android:id="@+id/btnThoat"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_marginTop="300dp"
        android:text="Thoát"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:drawableTop="@drawable/baseline_backspace_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        android:background="@drawable/custom_item_button"
        app:backgroundTint="@null"
        />
</androidx.constraintlayout.widget.ConstraintLayout>