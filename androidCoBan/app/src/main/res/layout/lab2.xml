<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LAB2.Lab2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30dp"
                android:text="Lab1" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25dp"
                android:text="Bài 1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:padding="50dp"
                android:src="@drawable/fptpolytechnic" />

            <EditText
                android:id="@+id/B1name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:hint="Nhâp tên của bạn"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="80dp"
                android:textSize="25dp"
                android:textColor="#737373"
                android:text="Bạn đang học hệ nào?" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/B1rdCaoDang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cao Đẳng" />

                <RadioButton
                    android:id="@+id/B1rdPhoThong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Phổ Thông" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_weight="1"
                android:text="Bạn thích ngôn ngữ nào?"
                android:textColor="#737373"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/B1cbJava"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="java" />

                <CheckBox
                    android:id="@+id/B1cbCcc"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="C++" />

                <CheckBox
                    android:id="@+id/B1cbJS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JavaScript" />
            </LinearLayout>

            <Button
                android:id="@+id/B1btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Lưu dữ Liệu" />

            <TextView
                android:id="@+id/B1SaveName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#03A9F4"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ten : ..." />

            <TextView
                android:id="@+id/B1SaveHeHoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#03A9F4"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hệ học : ..." />

            <TextView
                android:id="@+id/B1SaveNgonNgu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#03A9F4"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ngôn ngữ : ..." />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:text="Bài 2 : giao diện"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bài 3 : code btn"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:padding="50dp"
                android:src="@drawable/fptpolytechnic" />

            <EditText
                android:id="@+id/B2Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhâp tên của bạn"
                android:inputType="text" />
            <EditText
                android:id="@+id/B2MSSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhâp MSSV của bạn"
                android:inputType="text" />
            <EditText
                android:id="@+id/B2Old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhâp tuổi của bạn"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Giới Tính: "
                    android:textColor="#737373"
                    android:textSize="25dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/B2rdNam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/B2rdNu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nữ" />

                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Sở Thích: "
                android:textColor="#737373"
                android:textSize="25dp" />
            <CheckBox
                android:id="@+id/B2cbBongDa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Bóng Đá"
                android:textSize="20dp"/>
            <CheckBox
                android:id="@+id/B2cbChoiGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Chơi Game"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/B2btnLuu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Lưu" />
            <TextView
                android:id="@+id/B2KQ"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textColor="#03A9F4"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Nội dung hiển thị sau khi nhấn nút lưu" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

